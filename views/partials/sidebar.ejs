<aside class="sidebar" id="sidebar">
  <div class="sidebar-logo">
    <div class="logo-icon"><i class="fas fa-bolt"></i></div>
    <div class="logo-text">
      AtherixCloud
      <span>VPS Manager</span>
    </div>
  </div>

  <nav class="sidebar-nav">
    <div class="nav-section-title">Main</div>
    <a class="nav-item <%= typeof activePage !== 'undefined' && activePage === 'dashboard' ? 'active' : '' %>"
      href="/dashboard">
      <span class="nav-icon"><i class="fas fa-th-large"></i></span> Dashboard
    </a>
    <a class="nav-item <%= typeof activePage !== 'undefined' && activePage === 'vps' ? 'active' : '' %>" href="/vps">
      <span class="nav-icon"><i class="fas fa-server"></i></span> My VPS
    </a>
    <a class="nav-item <%= typeof activePage !== 'undefined' && activePage === 'tickets' ? 'active' : '' %>"
      href="/tickets">
      <span class="nav-icon"><i class="fas fa-headset"></i></span> Support
    </a>

    <% if (typeof user !=='undefined' && user && user.role==='admin' ) { %>
      <div class="nav-section-title" style="margin-top: 12px;">Administration</div>
      <a class="nav-item admin-nav <%= typeof activePage !== 'undefined' && activePage === 'admin-dashboard' ? 'active' : '' %>"
        href="/admin">
        <span class="nav-icon"><i class="fas fa-shield-alt"></i></span> Admin Panel
      </a>
      <a class="nav-item admin-nav <%= typeof activePage !== 'undefined' && activePage === 'admin-users' ? 'active' : '' %>"
        href="/admin/users">
        <span class="nav-icon"><i class="fas fa-users-cog"></i></span> Users
      </a>
      <a class="nav-item admin-nav <%= typeof activePage !== 'undefined' && activePage === 'admin-vps' ? 'active' : '' %>"
        href="/admin/vps">
        <span class="nav-icon"><i class="fas fa-network-wired"></i></span> VPS
      </a>
      <a class="nav-item admin-nav <%= typeof activePage !== 'undefined' && activePage === 'admin-tickets' ? 'active' : '' %>"
        href="/admin/tickets">
        <span class="nav-icon"><i class="fas fa-ticket-alt"></i></span> Tickets
      </a>
      <% } %>
  </nav>

  <div class="sidebar-footer">
    <div class="user-card">
      <div class="user-avatar">
        <%= typeof user !=='undefined' && user ? user.username?.charAt(0)?.toUpperCase() : '?' %>
      </div>
      <div class="user-info">
        <div class="user-name">
          <%= typeof user !=='undefined' && user ? user.username : 'Guest' %>
        </div>
        <div class="user-role">
          <%= typeof user !=='undefined' && user ? (user.role==='admin' ? '⚡ Admin' : '● User' ) : '' %>
        </div>
      </div>
    </div>
  </div>
</aside>